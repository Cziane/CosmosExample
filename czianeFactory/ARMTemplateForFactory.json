{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "czianeFactory"
		},
		"SQLCosmoDB_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'SQLCosmoDB'"
		},
		"MongoCosmoDB_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'MongoCosmoDB'"
		},
		"MongoCosmoDB_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "Family"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/pipeline1')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "CopyFromSQL2MongoCosmos",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"source": {
								"type": "CosmosDbSqlApiSource",
								"preferredRegions": []
							},
							"sink": {
								"type": "CosmosDbMongoDbApiSink",
								"writeBatchTimeout": "00:30:00",
								"writeBehavior": "insert"
							},
							"enableStaging": false,
							"translator": {
								"type": "TabularTranslator",
								"mappings": [
									{
										"source": {
											"path": "$['id']"
										},
										"sink": {
											"path": "id"
										}
									},
									{
										"source": {
											"path": "$['parents'][0]['familyName']"
										},
										"sink": {
											"path": "parent.familyname"
										}
									},
									{
										"source": {
											"path": "$['parents'][0]['givenName']"
										},
										"sink": {
											"path": "parent.givenName"
										}
									},
									{
										"source": {
											"path": "$['children'][0]['familyName']"
										},
										"sink": {
											"path": "children.familyName"
										}
									},
									{
										"source": {
											"path": "$['children'][0]['givenName']"
										},
										"sink": {
											"path": "children.givenName"
										}
									},
									{
										"source": {
											"path": "$['children'][0]['gender']"
										},
										"sink": {
											"path": "children.gender"
										}
									},
									{
										"source": {
											"path": "$['children'][0]['grade']"
										},
										"sink": {
											"path": "children.grade"
										}
									},
									{
										"source": {
											"path": "$['children'][0]['pets'][0]['givenName']"
										},
										"sink": {
											"path": "children.pet.givenName"
										}
									},
									{
										"source": {
											"path": "$['address']['state']"
										},
										"sink": {
											"path": "address.state"
										}
									},
									{
										"source": {
											"path": "$['address']['county']"
										},
										"sink": {
											"path": "address.county"
										}
									},
									{
										"source": {
											"path": "$['address']['city']"
										},
										"sink": {
											"path": "address.city"
										}
									},
									{
										"source": {
											"path": "$['creationDate']"
										},
										"sink": {
											"path": "creationDate"
										}
									},
									{
										"source": {
											"path": "$['isRegistered']"
										},
										"sink": {
											"path": "isRegistred"
										}
									},
									{
										"source": {
											"path": "$['_rid']"
										},
										"sink": {
											"path": "_rid"
										}
									},
									{
										"source": {
											"path": "$['_self']"
										},
										"sink": {
											"path": "_self"
										}
									},
									{
										"source": {
											"path": "$['_etag']"
										},
										"sink": {
											"path": "_etag"
										}
									},
									{
										"source": {
											"path": "$['_attachments']"
										},
										"sink": {
											"path": "_attachments"
										}
									},
									{
										"source": {
											"path": "$['_ts']"
										},
										"sink": {
											"path": "_ts"
										}
									}
								],
								"collectionReference": ""
							}
						},
						"inputs": [
							{
								"referenceName": "CosmosDbSqlApiCollection1",
								"type": "DatasetReference",
								"parameters": {}
							}
						],
						"outputs": [
							{
								"referenceName": "CosmosDbMongoDbApiCollection1",
								"type": "DatasetReference",
								"parameters": {}
							}
						]
					}
				],
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/CosmosDbSqlApiCollection1')]",
				"[concat(variables('factoryId'), '/datasets/CosmosDbMongoDbApiCollection1')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/SQLCosmoDB')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "CosmosDb",
				"typeProperties": {
					"connectionString": "[parameters('SQLCosmoDB_connectionString')]"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/CosmosDbSqlApiCollection1')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "SQLCosmoDB",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "CosmosDbSqlApiCollection",
				"schema": {
					"type": "object",
					"properties": {
						"parents": {
							"type": "array",
							"items": {
								"type": "object",
								"properties": {
									"familyName": {
										"type": "string"
									},
									"givenName": {
										"type": "string"
									}
								}
							}
						},
						"children": {
							"type": "array",
							"items": {
								"type": "object",
								"properties": {
									"familyName": {
										"type": "string"
									},
									"givenName": {
										"type": "string"
									},
									"gender": {
										"type": "string"
									},
									"grade": {
										"type": "integer"
									},
									"pets": {
										"type": "array",
										"items": {
											"type": "object",
											"properties": {
												"givenName": {
													"type": "string"
												}
											}
										}
									}
								}
							}
						},
						"address": {
							"type": "object",
							"properties": {
								"state": {
									"type": "string"
								},
								"county": {
									"type": "string"
								},
								"city": {
									"type": "string"
								}
							}
						},
						"creationDate": {
							"type": "integer"
						},
						"isRegistered": {
							"type": "boolean"
						}
					}
				},
				"typeProperties": {
					"collectionName": "Families"
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/SQLCosmoDB')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/CosmosDbMongoDbApiCollection1')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "MongoCosmoDB",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "CosmosDbMongoDbApiCollection",
				"schema": [],
				"typeProperties": {
					"collection": "Families"
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/MongoCosmoDB')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/MongoCosmoDB')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "CosmosDbMongoDbApi",
				"typeProperties": {
					"connectionString": "[parameters('MongoCosmoDB_connectionString')]",
					"database": "[parameters('MongoCosmoDB_properties_typeProperties_database')]"
				}
			},
			"dependsOn": []
		}
	]
}